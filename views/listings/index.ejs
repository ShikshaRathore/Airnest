<% layout("/layouts/boilerplate") %>
<style>
  .filters {
    display: flex;
    flex-wrap: wrap;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    cursor: pointer;
    opacity: 1;
  }

  .filter p {
    font-size: 0.9rem;
  }

  .tax-toggle {
    margin-left: auto;
  }

  @media (min-width: 768px) {
    .form-switch {
      margin-top: 3rem;
    }
  }

  /* Mobile Responsive Styles */
  @media (max-width: 768px) {
    .filters {
      gap: 0.5rem;
      margin-bottom: 1rem;
    }

    .filter {
      margin-right: 0.8rem;
      margin-top: 0.8rem;
    }

    .filter i {
      font-size: 0.9rem;
    }

    .filter p {
      font-size: 0.7rem;
    }

    .tax-toggle {
      width: 100%;
      margin-top: 0.5rem;
    }

    .form-check-label {
      font-size: 0.8rem;
    }

    .card-img-top {
      height: 12rem !important;
    }

    .card-body {
      padding: 0.75rem;
    }

    .card-text {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .filter {
      margin-right: 0.5rem;
      margin-top: 0.5rem;
    }

    .filter i {
      font-size: 0.8rem;
    }

    .filter p {
      font-size: 0.65rem;
    }

    .card-img-top {
      height: 10rem !important;
    }

    .card-body {
      padding: 0.5rem;
    }

    .card-text {
      font-size: 0.75rem;
    }

    .card-text b {
      font-size: 0.85rem;
    }
  }
</style>
<body>
  <div class="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castels</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
  <div
    class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 card-container"
  >
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing.id %>" class="listing-link">
      <div class="card listing-card col">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            <span class="listing-price" data-base-price="<%= listing.price %>">
              &#8377; <%= listing.price.toLocaleString("en-IN") %> </span
            >/ night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");

  taxSwitch.addEventListener("click", () => {
    let allPrices = document.querySelectorAll(".listing-price");

    allPrices.forEach((priceElement) => {
      let basePrice = parseInt(priceElement.getAttribute("data-base-price"));

      if (taxSwitch.checked) {
        // Calculate price with 18% GST
        let priceWithTax = Math.round(basePrice * 1.18);
        priceElement.innerHTML = `&#8377; ${priceWithTax.toLocaleString(
          "en-IN"
        )} <br><small style="opacity: 0.7;">(incl. 18% GST)</small>`;
      } else {
        // Show original price
        priceElement.innerHTML = `&#8377; ${basePrice.toLocaleString("en-IN")}`;
      }
    });
  });
</script>
