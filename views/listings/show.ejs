<% layout("/layouts/boilerplate") %>
<style>
  /* Mobile Responsive Styles */
  @media (max-width: 768px) {
    .col-8.offset-3 {
      width: 100%;
      margin-left: 0;
      padding: 0 1rem;
    }

    .col-6.offset-3 {
      width: 100%;
      margin-left: 0;
    }

    .listing-card {
      margin: 1rem;
    }

    .show-img {
      height: auto;
      max-height: 300px;
      object-fit: cover;
    }

    .card-body {
      padding: 1rem;
    }

    .card-text {
      font-size: 0.9rem;
    }

    .show-page-btns {
      flex-direction: column;
      gap: 0.5rem;
    }

    .show-page-btns a,
    .show-page-btns button {
      width: 100%;
    }

    .review-card {
      width: 100% !important;
      margin-left: 0 !important;
      margin-right: 0 !important;
    }

    #map {
      height: 300px;
    }
  }

  @media (max-width: 480px) {
    .col-8.offset-3 h3 {
      font-size: 1.3rem;
    }

    .listing-card {
      margin: 0.5rem;
    }

    .show-img {
      max-height: 250px;
    }

    .card-body {
      padding: 0.75rem;
    }

    .card-text {
      font-size: 0.85rem;
    }

    textarea {
      width: 100% !important;
    }

    #map {
      height: 250px;
    }
  }
</style>

<div class="row">
  <div class="col-8 offset-3 mt-3">
    <h3><b><%= listing.title %></b></h3>
  </div>
  <div class="card listing-card col-6 offset-3 mt-3">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text"><i>Owned by <%= listing.owner.username%></i></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        &#8377; <%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text"><%= listing.location%></p>
      <p class="card-text"><b><%= listing.country %></b></p>
    </div>
    <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
    <div class="show-page-btns mt-3">
      <a
        href="/listings/<%=listing._id%>/edit"
        class="btn btn-dark show-page-btn edit-btn"
        >Edit</a
      >
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</div>

<!-------------- REVIEWS PART ----------------->
<div class="col-8 offset-3 mt-3">
  <hr />
  <% if(currUser){ %>
  <h3>Leave a review</h3>
  <form
    method="POST"
    action="/listings/<%= listing._id %>/reviews"
    class="mb-3 mt-3 needs-validation"
    novalidate
  >
    <div class="mt-3">
      <label for="rating" class="form-label">Rating</label>
      <fieldset class="starability-slot">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="0"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>
    <br />
    <label for="comment" class="form-label">Comment</label>
    <br />
    <textarea
      name="review[comment]"
      id="comment"
      rows="4"
      cols="30"
      class="form-control"
      required
    ></textarea>
    <div class="invalid-feedback">Please add some comment for review</div>
    <br />
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <hr />
  <% } %>

  <!----------------- SHOW REVIEWS ----------------------->

  <% if(listing.reviews.length > 0) { %>
  <div class="row">
    <h4>All Reviews</h4>
    <% for (review of listing.reviews) { %>
    <div class="card col-4 review-card mt-3 mb-3 ms-2">
      <div class="card-body mb-2">
        <p class="card-title"><i>@<%= review.author.username %></i></p>
        <p
          class="starability-result card-text"
          data-rating="<%= review.rating %>"
        ></p>
        <p class="card-text"><%= review.comment %></p>
        <form
          class="mt-2"
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>
  <div class="col-12 col-md-8 mb-3 px-3">
    <h3>where you'll be</h3>
    <div id="map" style="height: 300px; width: 100%" class="rounded"></div>
  </div>
</div>
